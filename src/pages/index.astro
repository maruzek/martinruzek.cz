---
import AboutMe from "../components/AboutMe.astro";
import Certificates from "../components/Certificates.astro";
import Education from "../components/Education.astro";
import HeroCard from "../components/HeroCard.astro";
import HeroHeading from "../components/HeroHeading.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="container">
    <main>
      <HeroCard />
      <div id="content">
        <HeroHeading />
        <AboutMe />
        <Skills />
        <Projects />
        <Education />
        <Certificates />
      </div>
    </main>

    <style>
      .container {
        display: flex;
        justify-content: center;
        width: 100%;
      }

      main {
        display: flex;
        align-items: start;
        flex-direction: row;
        width: 80%;
      }

      #content {
        width: 80%;
      }

      #content section {
        width: 100%;
        margin: 30px 0;
      }

      @media (max-width: 992px) {
        main {
          flex-direction: column;
          align-items: center;
          width: 100%;
          gap: 1rem;
        }

        .container {
          padding: 0 1rem;
        }

        #content {
          width: 100%;
        }

        #content :global(h1, h2, h3, h4, h5, h6) {
          text-align: center;
        }
      }

      @media (max-width: 768px) {
        /* Mobile */
        .container {
          padding: 0 1rem;
        }

        main {
          width: 100%;
        }

        #content section {
          margin: 20px 0;
        }
      }
    </style>
  </div>
</Layout>
