---
import AboutMe from "../components/AboutMe.astro";
import Certificates from "../components/Certificates.astro";
import Education from "../components/Education.astro";
import HeroCard from "../components/HeroCard.astro";
import HeroHeading from "../components/HeroHeading.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Layout from "../layouts/Layout.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <div class="container">
    <main>
      <HeroCard />
      <div id="content">
        <HeroHeading />
        <AboutMe />
        <Skills />
        <Projects />
        <Education />
        <Certificates />
      </div>
    </main>

    <style>
      .container {
        display: flex;
        justify-content: center;
        width: 100%;
      }

      main {
        display: flex;
        align-items: start;
        flex-direction: row;
        width: 80%;
      }

      #content {
        width: 80%;
      }

      #content section {
        width: 100%;
        /* height: 100vh; */
        margin: 30px 0;
      }

      /* Responsive adjustments */
      @media (max-width: 992px) {
        main {
          flex-direction: column;
          align-items: center;
          width: 100%;
          gap: 1rem;
        }

        .container {
          padding: 0 1rem;
        }

        /* Adjust HeroCard for stacked layout */
        /* You'll also need to adjust styles within HeroCard.astro */
        /* For example, make its internal #hero position: static or relative, width: 100%, height: auto */
        /* This is a placeholder for where you'd override HeroCard's specific styles if needed from here, */
        /* but it's better to make HeroCard itself responsive. */
        /* For now, we ensure #content takes full width below it. */

        #content {
          width: 100%; /* Ensure content takes full width when stacked */
        }

        #content :global(h1, h2, h3, h4, h5, h6) {
          text-align: center; /* Center headings on smaller screens */
        }
      }

      @media (max-width: 768px) {
        /* Mobile */
        .container {
          padding: 0 1rem; /* Adjust padding for mobile */
        }

        main {
          width: 100%;
        }

        #content section {
          margin: 20px 0; /* Reduce margin for sections on mobile */
        }
      }
    </style>
  </div>
</Layout>
